BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: miles_input
            font_size: 48
            text: '34'
            on_text: app.handle_calculate()
        BoxLayout
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_addition(1)
            Button:
                text: 'Down'
                on_press: app.handle_addition(-1)
    Button:
        text: 'Convert m to km'
        on_press: app.handle_calculate()
    Label:
        id: converted_kilometres
        font_size: 48
        text: '54.717'
        color: (1, 1, 0, 1)